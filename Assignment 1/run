#!/bin/bash
#simple bash script for compiling java files into class files and then running them

if [ ! -d "classes" ]
then
  # dist folder does not exist, create.
  mkdir classes
  echo Created dist directory
fi

#compiles all .java files within the root directory into class files within classes/
java --version
echo Starting Java compile...
javac -d classes/ *.java
echo Complete.
echo Running...
java Main